<% content_for :context_height do %>
  900px
<% end %>
<% content_for :title do %>
  | <%=  t :'brasoes.title' %> | <%= t :'client_searches.title' %>
<% end %>

<div id="inner-context">
  <div style="margin-right:30px">
    <div style="margin-bottom:15px;">
      <img src="<%= t :img %>brasoes.gif" alt="Brasoes" style="vertical-align:middle;float:left; margin-right:0.5em"/>
      <div style="padding-top:8px;font-weight:bold;"> &gt;&gt; <%= t :'client_searches.title' %></div>
    </div>
    <p style="font-size: 120%; margin-top:0px; margin-bottom:2em;">
		<%= t :'.text' %>
    </p>

    <div id="cadastro_box" class="client-box" style="margin:0px 0px">
        <table style="width:750px">
		  <tr>
			<td colspan=2>
				<h4 style="font-weight:bold;border-bottom:1px dotted #000000; margin:0px"><%= t :'client_searches.new.data' %></h4>
			</td>
		  </tr>
          <tr>
            <td class="label" style="width:200px"><%= t :'client_searches.new.name' %>:</td>
            <td><strong><%= @client_search.name  %></strong></td>
          </tr>
          <tr>
            <td class="label"><%= t :'client_searches.new.email' %>:</td>
            <td><strong><%= @client_search.email  %></strong><br/><%= t :'client_searches.new.email_info' %></td>
          </tr>
		  <tr>
			<td colspan=2>
				<h4 style="font-weight:bold;border-bottom:1px dotted #000000; margin:1em 0 0.5em 0"><%= t :'.first_title' %></h4>
			</td>
		  </tr>
          <tr>
            <td class="label"><%= t :'client_searches.new.surname' %>:</td>
            <td><%= @client_search.surname_1 %></td>
          </tr>
          <tr>
            <td class="label"><%= t :'client_searches.new.variatons' %>:</td>
            <td><%= @client_search.variatons_1 %></td>
          </tr>
          <tr>
            <td class="label"><%= t :'client_searches.new.origin' %>:</td>
            <td><%= @client_search.region_1%></td>
          </tr>
          <tr>
            <td class="label"><%= t :'client_searches.new.info' %>:</td>
            <td><%= @client_search.description_1 %></td>
          </tr>
		  <% unless @client_search.surname_2.blank? %>
			  <tr>
				<td colspan=2>
					<h4 style="font-weight:bold;border-bottom:1px dotted #000000; margin:1em 0 0.5em 0"><%= t :'.second_title' %></h4>
				</td>
			  </tr>
	          <tr>
	            <td class="label"><%= t :'client_searches.new.surname' %>:</td>
	            <td><%= @client_search.surname_2 %></td>
	          </tr>
	          <tr>
	            <td class="label"><%= t :'client_searches.new.variatons' %>:</td>
	            <td><%= @client_search.variatons_2 %></td>
	          </tr>
	          <tr>
	            <td class="label"><%= t :'client_searches.new.origin' %>:</td>
	            <td><%= @client_search.region_2%></td>
	          </tr>
	          <tr>
	            <td class="label"><%= t :'client_searches.new.info' %>:</td>
	            <td><%= @client_search.description_2 %></td>
	          </tr>
		  <% end %>
		  <% unless @client_search.surname_3.blank? %>
			  <tr>
				<td colspan=2>
					<h4 style="font-weight:bold;border-bottom:1px dotted #000000; margin:1em 0 0.5em 0"><%= t :'.third_title' %></h4>
				</td>
			  </tr>
	          <tr>
	            <td class="label"><%= t :'client_searches.new.surname' %>:</td>
	            <td><%= @client_search.surname_3 %></td>
	          </tr>
	          <tr>
	            <td class="label"><%= t :'client_searches.new.variatons' %>:</td>
	            <td><%= @client_search.variatons_3 %></td>
	          </tr>
	          <tr>
	            <td class="label"><%= t :'client_searches.new.origin' %>:</td>
	            <td><%= @client_search.region_3 %></td>
	          </tr>
	          <tr>
	            <td class="label"><%= t :'client_searches.new.info' %>:</td>
	            <td><%= @client_search.description_3 %></td>
	          </tr>
		  <% end %>
        </table>
    </div>
	<div style="text-align:center; font-size:100%; margin-top: 1em"><%= link_to t(:'.edit'), edit_client_search_path(@client_search) %></div>
	<div style="margin-top:2em; text-align:right; font-size:140%">
		<%= t :'.price' %>: <span class="price"><%= currency_for @client_search.price %></span>
		
		<% if I18n.locale == :'pt-BR' %>
			<% form_tag "https://pagseguro.uol.com.br/checkout/checkout.jhtml", :encoding => "ISO-8859-1", :method => :post do %>
			  <input type="hidden" name="email_cobranca" value="max@guzenski.com.br" />
			  <input type="hidden" name="tipo" value="CP"/>
			  <input type="hidden" name="moeda" value="BRL"/>
			  <input type="hidden" name="tipo_frete" value="EN"/>
			  <input type="hidden" name="ref_transacao" value="PESQUISA_ACERVO"/>
		
		      <input type="hidden" name="item_id_1"    value="PESQUISA_1"/>
		      <input type="hidden" name="item_descr_1" value="Pesquisa de sobrenome(s) no acervo do Museu Medieval"/>
		      <input type="hidden" name="item_quant_1" value="1"/>
		      <input type="hidden" name="item_valor_1" value="<%= pagseguro_price @client_search.price %> "/>
		      <input type="hidden" name="item_frete_1" value="0"/>

			  <input type="hidden" name="cliente_nome"  value="<%= @client_search.name %>"/>
			  <input type="hidden" name="cliente_email" value="<%= @client_search.email %>"/>

			  <input type="submit" value="<%= t :'.pay' %>" /> 
			<% end %>
		<% else %>
			<form action="https://www.paypal.com/cgi-bin/webscr" method="post">
			<input type="hidden" name="cmd" value="_xclick">
			<input type="hidden" name="business" value="2A3KS8PZNDRVS">
			<input type="hidden" name="lc" value="BR">
			<input type="hidden" name="button_subtype" value="services">
			<input type="hidden" name="currency_code" value="USD">
			<input type="hidden" name="bn" value="PP-BuyNowBF:btn_paynowCC_LG.gif:NonHosted">
			<table>
				<tr>
					<td><input type="hidden" name="on0" value="Surnames"></td>
				</tr>
				<tr>
					<td>
						<% if !@client_search.surname_3.blank? %>
							<input type="hidden" name="os0" value="1 surname">
						<% elsif !@client_search.surname_2.blank? %>
							<input type="hidden" name="os0" value="2 surnames">
						<% else %>
							<input type="hidden" name="os0" value="3 surnames">
						<% end %>
					</td>
				</tr>
			</table>
			<input type="hidden" name="currency_code" value="USD">
			<input type="hidden" name="option_select0" value="1 surname">
			<input type="hidden" name="option_amount0" value="8.00">
			<input type="hidden" name="option_select1" value="2 surnames">
			<input type="hidden" name="option_amount1" value="16.00">
			<input type="hidden" name="option_select2" value="3 surnames">
			<input type="hidden" name="option_amount2" value="24.00">
			<input type="hidden" name="option_index" value="0">
			<input type="image" src="https://www.paypal.com/en_US/i/btn/btn_paynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
			<img alt="" border="0" src="https://www.paypal.com/pt_BR/i/scr/pixel.gif" width="1" height="1">
			</form>
		<% end %>
		
	</div>
  </div>
</div>