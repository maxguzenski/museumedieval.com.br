<div id="modal_como_pesquisar" class="modal" style="display:none">
  
  <div style="height:500px; overflow:auto;padding-right:2em;">
    <div style="text-align:left"><h3><%= t :'.title'%></h3></div>
    <p style="font-size: 100%; margin-bottom:20px; text-align:left">
		<%= t :'.p1'%>
    </p>
    <p style="font-size: 100%; margin-bottom:20px; text-align:justify">
		<%= t :'.p2'%>
    </p>

    <div style="text-align:left"><h6><%= t :'.sample.title'%>:</h6></div>    
    <p style="font-size: 100%; margin-bottom:20px; text-align:justify">
		<%= t :'.sample.text'%>	
    </p>

    <center><img src="<%= t :img %>sample_find.gif" width="300" /></center>
    <br/><br/>
    
    <div style="text-align:left"><h6><%= t :'.not_found.title'%></h6></div>
    <p style="font-size: 100%; margin-bottom:10px; text-align:justify">
		<%= t :'not_found.p1'%>
	</p>
    <p style="font-size: 120%; margin-bottom:5px; text-align:center;">
		<%= link_to t(:'not_found.email_search'), client_searches_path, :style => "color: #C40000; font-weight:bold" %>
    </p>
    <p style="font-size: 90%; margin-bottom:20px; text-align:center">
		<%= t :'not_found.p2'%>
    </p>

  </div>
  <center>
    <a href="" onclick="$('#modal_como_pesquisar').dialog('close'); return false;">
      <img src="<%= t :img %>fechar.gif" alt="fechar"/>
    </a>
  </center>
</div>