<% remote_form_for @contact, :url => {:action => :create} do |f| %>
  <p>
    <%= f.label :name, "#{t(:'.name')}:" %> <%= f.error_message_on :name %><br/>
    <%= f.text_field :name %>    
  </p>
  <p>
    <%= f.label :email, "#{t(:'.email')}:" %> <%= f.error_message_on :email %> <br/>
    <%= f.text_field :email %>
  </p>
  <p>
    <%=  f.label :subject, "#{t(:'.subject')}:" %> <%=  f.error_message_on :subject %><br/>
    <%=  f.text_field :subject %>    
  </p>
  <p>
    <%=  f.label :message, "#{t(:'.message')}:" %> <%= f.error_message_on :message %><br/>
    <%=  f.text_area :message %>
  </p>
  <div style="text-align:right"><%= submit_tag t(:send) %></div>
<% end %>